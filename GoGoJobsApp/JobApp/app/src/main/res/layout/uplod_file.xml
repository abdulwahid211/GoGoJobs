<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3D1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="553dp" >


        <Button
            android:id="@+id/submitbutton"
            android:onClick="SubmitButton"

            android:text="Submit Files"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="@drawable/forms3"
            android:textStyle="bold"
            android:layout_marginBottom="39dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="CV"
            android:id="@+id/cvButton"

            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/forms4"
            android:onClick="UploadCV"
          />

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Cover Letter"
            android:onClick="UploadCoverLetter"

            android:textSize="25dp"
            android:textStyle="bold"
            android:background="@drawable/forms4"
            android:id="@+id/coverButton"
            />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please upload your all relevant documents "
            android:id="@+id/messagge"
            android:textStyle="bold"
            android:textAlignment="center"
        />

    </RelativeLayout>

</ScrollView>