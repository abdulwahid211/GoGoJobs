<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3D1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <TextView
            android:id="@+id/txtQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/apply"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:background="@drawable/forms3"
            android:onClick="applyButton"
            android:text="Apply "
            android:textColor="#ffffff"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description of the job:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ansr_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/title_responsibilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Responsibilities"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ansr_responsibilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            />


        <TextView
            android:id="@+id/title_facts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Facts:"
            android:textColor="#000000"
            android:textSize="21dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/answer_facts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18dp"
             />




    </RelativeLayout>

</ScrollView>