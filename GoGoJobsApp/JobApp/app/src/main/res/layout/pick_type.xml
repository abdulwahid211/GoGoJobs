<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gogobackground"
    >



    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Job Seeker"
        android:textSize="30dp"
        android:background="@drawable/forms3"
        android:drawableTop="@drawable/jobseekericon"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:onClick="jbButton"
        android:id="@+id/button_jb"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employer"
        android:background="@drawable/forms3"
        android:onClick="empButton"
        android:textSize="30dp"
        android:drawableTop="@drawable/employericon"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/button_emp"
        />
</LinearLayout>