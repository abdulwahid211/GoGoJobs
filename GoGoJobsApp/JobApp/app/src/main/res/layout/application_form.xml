<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF3D1" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="555dp" >


        <Button
            android:id="@+id/button"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:onClick="SubmitButton"
            android:background="#6590db"
            android:text="Upload Files >>>"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Are you eligable to work in the UK?"
            android:id="@+id/textView2"
            android:textColor="#000000"

            android:textStyle="bold"
            android:textSize="20dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes "
            android:onClick="eligCheckYes"
            android:id="@+id/checkBox"
            android:checked="false"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No "
            android:onClick="eligCheckNo"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/textView2"
            android:layout_toRightOf="@+id/checkBox"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="What is your notice period?"
            android:textColor="#000000"

            android:textStyle="bold"
            android:id="@+id/textView3"
            android:textSize="20dp"

            android:layout_below="@+id/checkBox2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginBottom="5dp"
            android:id="@+id/noticePeriod"
            android:background="@drawable/forms2"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Do you have any previous experience for this role?"
            android:id="@+id/textView6"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="20dp"

            android:layout_below="@+id/noticePeriod"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:onClick="experYes"
            android:id="@+id/chckBxExperYes"
            android:checked="false"
            android:layout_below="@+id/textView6" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:onClick="experNo"
            android:id="@+id/checkBox3"
            android:checked="false"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="19dp"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:text="Why do you think you are suitable for this job? (100 words)"
            android:id="@+id/textView5"
            android:layout_below="@+id/checkBox3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/anserInfo"
            android:background="@drawable/forms2"
            android:height="90dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</ScrollView>